@model IEnumerable<Manager>
@{
    ViewBag.Title = "Contact Manager";
}

<a asp-action="Add" asp-controller="Manager" class="m1-2">Add Contact</a>
<table class="table mt-2">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Manager manager in Model)
        {
        <tr>
            <td>
                <a asp-controller="Manager" asp-action="Details"
                   asp-route-id="@manager.ManagerId"
                   asp-route-slug="@manager.Slug">@manager.FirstName</a>
            </td>
            <td>
                <a asp-controller="Manager" asp-action="Details"
                   asp-route-id="@manager.ManagerId"
                   asp-route-slug="@manager.Slug">@manager.LastName</a>
            </td>
            <td>@manager.PhoneNumber</td>
            <td>@manager.Email</td>
            <td>@manager.Category.Name</td>
        </tr>
        }
    </tbody>
</table>